<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_wide_1"
            android:textColor="@color/md_black_1000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_art"
        android:layout_below="@id/logo"
        android:id="@+id/draw"
        />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/draw"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <com.md.mataka.latobold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/font"
            android:textSize="27sp"
            />

        <com.md.mataka.latonormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightfont"
            android:text="Enter your mobile number to continue"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginTop="20dp"
            android:id="@+id/mobile"
            android:hint="Enter Mobile number"
            android:inputType="number"
            android:textSize="13sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:hint="Enter Password"
            android:textSize="13sp"
            />


            <com.md.mataka.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/lightfont"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/forgot"
                android:text="Forgot password ?"
                />


            <com.md.mataka.latobold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/button"
            android:id="@+id/submit"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:layout_marginTop="12sp"
            />

        <com.md.mataka.latobold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightfont"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/create"
            android:text="I'm new user, Sign Up"
            />

    </LinearLayout>

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>